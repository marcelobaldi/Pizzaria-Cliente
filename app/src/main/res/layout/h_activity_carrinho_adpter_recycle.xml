<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/im_ItemRecycle"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/ItemRecycle_Nome"
        android:text="Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/im_ItemRecycle"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/texto_qt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/im_ItemRecycle"
        android:layout_alignStart="@+id/ItemRecycle_Nome"
        android:paddingBottom="5dp"
        android:text="Qt."
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ItemRecycle_quantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/im_ItemRecycle"
        android:layout_alignStart="@+id/ItemRecycle_Nome"
        android:paddingBottom="5dp"
        android:layout_marginStart="25dp"
        android:text="99"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/texto_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/im_ItemRecycle"
        android:layout_alignStart="@+id/ItemRecycle_Nome"
        android:paddingBottom="5dp"
        android:layout_marginStart="80dp"
        android:text="R$"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ItemRecycle_Preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/im_ItemRecycle"
        android:layout_alignStart="@+id/ItemRecycle_Nome"
        android:paddingBottom="5dp"
        android:layout_marginStart="105dp"
        android:text="250,50"
        android:textSize="16sp" />

    <Button
        android:id="@+id/bt_edit_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ItemRecycle_Preco"
        android:text="edit"/>

    <Button
        android:id="@+id/bt_remove_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bt_edit_item"
        android:text="remove" />

</RelativeLayout>