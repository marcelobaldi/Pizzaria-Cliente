<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ListaAdapter_Imagem"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <TextView
        android:id="@+id/ListaAdapter_Nome"
        android:text="Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/ListaAdapter_Imagem"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/ListaAdapter_Descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ListaAdapter_Imagem"
        android:layout_alignStart="@+id/ListaAdapter_Nome"
        android:paddingBottom="5dp"
        android:text="Descrição"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ListaAdapter_Preco"
        android:text="Preço"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="18sp"
        android:layout_marginRight="5dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ListaAdapter_Preco"
        android:layout_alignBottom="@+id/ListaAdapter_Preco"
        android:layout_toStartOf="@+id/ListaAdapter_Preco"
        android:paddingRight="1dp"
        android:text="R$"
        android:textSize="17dp" />

</RelativeLayout>